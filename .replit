run = "npm install && npm run build && npm run start"
modules = ["nodejs-20", "postgresql-16"]

[env]
PORT = "3000"
NODE_ENV = "production"

[deployment]
run = ["pnpm", "start"]
deploymentTarget = "autoscale"
build = ["pnpm", "run", "build"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "dev"

[[workflows.workflow]]
name = "dev"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80